<head>
	<%= stylesheet_link_tag 'categories', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<div class="row">
<ul>
	<% @categories.each do |cat| %>
	<li><%= cat.name %>
		<%= link_to 'Edit', edit_admin_category_path(cat) %>
		<%= link_to 'Destroy', cat , method: :delete, data: {confirm: 'Are you sure?'}  %>
	</li>
	<% end %>
	<a href="/admin">Back to Panel</a>
</ul>
</div>