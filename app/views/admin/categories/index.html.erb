<head>
	<%= stylesheet_link_tag 'categories', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<div class="row">
<ul>
	<% @categories.each do |cat| %>
	<li><%= cat.name %>
		<%= link_to 'Edit', edit_admin_category_path(cat) %>
		<%#= link_to 'Destroy', ([:admin, cat]) , method: :delete, data: {confirm: 'Are you sure?'}  %>
		<%= link_to 'Destroy', admin_category_path(cat), data: {confirm: "Are you sure?"}, method: :delete %>
		
	</li>
	<% end %>
	<%= link_to 'New', new_admin_category_path %> <br>
	<a href="/admin">Back to Panel</a>
</ul>
</div>